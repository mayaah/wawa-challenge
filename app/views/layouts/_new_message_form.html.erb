<%= form_with(model: [@single_room, @message], remote: true,
data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset"}) do |f| %>
  <%= f.text_field :body, autocomplete: 'off', class: 'w-3/5' %>
  <%= f.submit data: { disable_with: false }, class: 'cursor-pointer py-2 p-4 bg-indigo-800 text-white ml-4'  %>
<% end %>
