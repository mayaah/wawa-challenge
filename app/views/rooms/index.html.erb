<div class="flex">
  <aside id="sidebar" class="fixed overflow-auto top-0 left-0 z-40 w-1/3 h-screen bg-gray-100 p-3">
    <div class="font-bold"> <%= current_user.username %> </div>
    <div class="text-3xl font-bold text-indigo-800 my-5">
      Rooms
    </div>
    <%= render 'layouts/new_room_form' %>
    <%= turbo_stream_from "rooms" %>
    <div id="rooms" class="my-5">
      <%= render @rooms %>
    </div>
  </aside>

  <div class="fixed overflow-auto top-0 right-0 w-2/3 h-screen p-3">
    <% if @single_room %>
      <div class="fixed top-0 bg-white text-3xl font-bold text-indigo-800 py-5 w-full">
        <%= @single_room.name %>
      </div>
      <%= turbo_stream_from @single_room %>
      <div id="messages" data-controller="scroll" class="mb-24 mt-24">
        <%= render @messages %>
      </div>
      <div class="container fixed bottom-0 py-10 bg-white">
        <%= render 'layouts/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>
